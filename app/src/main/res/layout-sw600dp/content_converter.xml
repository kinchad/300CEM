<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".converter">

    <TextView
        android:id="@+id/tvBaseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/baseCurrency"
        android:textSize="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp" />

    <Spinner
        android:id="@+id/baseSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/etBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="numberDecimal"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />

    <View
        android:layout_width="500dp"
        android:layout_height="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tvTargetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/targetCurrency"
        android:textSize="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp" />

    <Spinner
        android:id="@+id/targetSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/btnConvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/btnConvert"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/tvTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/btnConvert"
            android:background="@xml/textview_border" />
    </RelativeLayout>
</LinearLayout>