<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools2="http://schemas.android.com/tools"
    android:id="@+id/linearAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCurrencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currency Name"
            android:layout_margin="30dp"
            android:textSize="30dp"
            />

        <ImageButton
            android:id="@+id/btnFavour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvSevenDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Day prediction"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/tv7dayAlgorithm1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Algorithm:" />

                    <TextView
                        android:id="@+id/tv7dayBid1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bid Price:" />

                    <TextView
                        android:id="@+id/tv7dayAsk1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ask Price:" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="5dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOneMonth1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 month prediction"
                android:textSize="20dp"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/tv1monthAlgorithm1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Algorithm:" />

                    <TextView
                        android:id="@+id/tv1monthBid1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bid Price:" />

                    <TextView
                        android:id="@+id/tv1monthAsk1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ask Price:" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="5dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOneYear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 year prediction"
                android:textSize="20dp"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/tv1yearAlgorithm1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Algorithm:" />

                    <TextView
                        android:id="@+id/tv1yearBid1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bid Price:" />

                    <TextView
                        android:id="@+id/tv1yearAsk1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ask Price:" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>